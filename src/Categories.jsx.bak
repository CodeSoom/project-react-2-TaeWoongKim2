import React from 'react';

import { isEmpty } from './utils';

export default function Categories({
  categories = [],
  checkedCategory = [],
  onClick,
}) {
  const isShowAll = isEmpty(checkedCategory);

  return (
    <ul>
      <li
        active={checkedCategory && isEmpty(checkedCategory)}
      >
        <input type="checkbox" id="categoryAll" name="categoryAll" value="all" defaultChecked={isShowAll} />
        <label htmlFor="categoryAll">전체</label>
        <button
          type="button"
          onClick={() => onClick(null)}
        >
          전체
        </button>
      </li>
      {categories.map(({ id, category }) => (
        <li
          key={id}
          active={checkedCategory && checkedCategory.includes(id)}
        >
          <input type="checkbox" id={`category${id}`} name={`category${id}`} value={id} />
          <label htmlFor={`category${id}`}>{category}</label>

          <button
            type="button"
            onClick={() => onClick({ id, category })}
          >
            {category}
          </button>
        </li>
      ))}
    </ul>
  );
}
